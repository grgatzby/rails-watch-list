<div class="over-banner">
    <%= link_to "Delete list", list_path(@list), class: 'link-black', data: {turbo_method: :delete, turbo_confirm: "Delete this list?"}%>
    <%= link_to "My lists", lists_path, class: 'link-black'%>
    <%= link_to "New list", new_list_path, class: 'link-black'%>
</div>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @list.photo.key, height: 300, crop: :fill %>');">
  <div class="orange-count white-text-btn"><%= "#{@list.bookmarks.count} movies"%></div>
  <div class="container">
    <h1><strong><%= @list.name.capitalize %></strong></h1>
  </div>
</div>

<div class="container">
  <div class = "cardbox-banner">
    <div class="btn btn-success btn-sm"><%= link_to "My lists", lists_path, class: "white-text-btn"%></div>
    <div class="btn btn-success btn-sm"><%= link_to "Add a movie", new_list_bookmark_path(@list), class: "white-text-btn"%></div>
  </div>
  <div class = "bookmarks-cardbox">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="bookmark-card">
          <%= image_tag bookmark.movie.poster_url, alt: bookmark.movie.title, height: 120%>
          <div class="bookmark-card-text p-3">
            <h3><%= bookmark.movie.title %></h3>
            <p><%= bookmark.movie.overview %></p>
          </div>
          <div class="bookmark-card-footer">
            <div>
              <p>
                <i class="fa-solid fa-quote-left"></i>
                <%= bookmark.comment %>
              </p>
            </div>
            <p><%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%></p>
          </div>
        </div>
      <% end %>
  </div>
</div>
<div>


</div>
